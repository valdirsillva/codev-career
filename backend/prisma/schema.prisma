generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Company {
  id          String    @id @default(uuid())
  name        String?
  cnpj        String    @unique
  sector      String
  description String
  Vacancy     Vacancy[]

  @@map("companies")
}

// Vaga
model Vacancy {
  id           String        @id @default(uuid())
  title        String
  description  String
  location     String
  salary       String
  requirements String
  Application  Application[]

  companyId String
  company   Company @relation(fields: [companyId], references: [id])

  @@map("vacancies")
}

// Candidato
model Candidate {
  id          String        @id @default(uuid())
  name        String
  email       String
  experiences String
  Application Application[]

  @@map("candidates")
}

// Candidatura
model Application {
  id          String    @id @default(uuid())
  vacancyId   String
  candidateId String
  vacancy     Vacancy   @relation(fields: [vacancyId], references: [id])
  candidate   Candidate @relation(fields: [candidateId], references: [id])

  @@map("applications")
}

model User {
  id             String  @id @default(uuid())
  email          String  @unique
  password       String
  password_reset String?
  name           String
  role           String  @default("CANDIDATE")

  @@map("users")
}
