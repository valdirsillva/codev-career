generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Vaga
model Vacancy {
  id           String        @id @default(uuid())
  title        String
  description  String
  salary       String
  requirements String
  Application  Application[]

  companyId String
  company   Company @relation(fields: [companyId], references: [id])

  @@map("vacancies")
}

// Candidatura
model Application {
  id              String    @id @default(uuid())
  vacancyId       String
  candidateId     String
  dateApplication DateTime  @default(now())
  vacancy         Vacancy   @relation(fields: [vacancyId], references: [id])
  candidate       Candidate @relation(fields: [candidateId], references: [id])

  @@map("applications")
}

model User {
  id          String      @id @default(uuid())
  name        String
  email       String      @unique
  password    String
  phoneNumber String
  address     String
  role        String      @default("CANDIDATE")
  Candidate   Candidate[]
  Company     Company[]

  @@map("users")
}

// Candidato
model Candidate {
  id          String        @id @default(uuid())
  cpf         String?
  gender      String
  education   String
  experiences String?
  Application Application[]

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("candidates")
}

model Company {
  id          String    @id @default(uuid())
  cnpj        String    @unique
  name        String
  sector      String?
  description String?
  Vacancy     Vacancy[]

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("companies")
}
